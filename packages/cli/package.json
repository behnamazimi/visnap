{
  "name": "@visual-testing-tool/cli",
  "version": "0.1.0",
  "description": "Visual Testing Tool - CLI for visual regression testing",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "visual-testing-tool": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "@visual-testing-tool/core": "*",
    "chalk": "^5.6.2",
    "commander": "^14.0.0",
    "inquirer": "^12.9.6"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@visual-testing-tool/eslint-config": "*",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "msw": "^2.6.6",
    "tsup": "^8.3.5",
    "typescript": "5.9.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
