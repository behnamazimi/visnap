{
  "name": "@visnap/reporter",
  "version": "0.6.0",
  "description": "Visual Testing Tool - HTML and JSON reporters for test results",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@visnap/protocol": "*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "5.9.3",
    "tsup": "^8.3.5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/behnamazimi/visnap.git",
    "directory": "packages/reporter"
  },
  "homepage": "https://visnap.dev",
  "bugs": {
    "url": "https://github.com/behnamazimi/visnap/issues"
  },
  "keywords": [
    "visual-testing",
    "reporter",
    "html-report",
    "json-report",
    "test-results"
  ],
  "license": "MIT",
  "author": "visnap contributors"
}
