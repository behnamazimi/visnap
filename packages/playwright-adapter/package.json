{
  "name": "@visual-testing-tool/playwright-adapter",
  "version": "0.1.2",
  "description": "Playwright browser adapter for visual-testing-tool",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "peerDependencies": {
    "playwright": ">=1.40.0",
    "playwright-core": ">=1.40.0"
  },
  "dependencies": {
    "@visual-testing-tool/protocol": "^0.1.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@visual-testing-tool/eslint-config": "*",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "tsup": "^8.3.5",
    "typescript": "5.9.2",
    "vitest": "^2.1.8"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
