{
  "name": "@vividiff/core",
  "version": "0.1.2",
  "description": "Visual Testing Tool - Core library for visual regression testing",
  "type": "module",
  "main": "./dist/core.cjs",
  "module": "./dist/core.js",
  "types": "./dist/core.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@vividiff/playwright-adapter": "^0.1.2",
    "@vividiff/protocol": "^0.1.2",
    "@vividiff/storybook-adapter": "^0.1.2",
    "ajv": "^8.17.1",
    "bundle-require": "^4.0.2",
    "lodash": "^4.17.21",
    "minimatch": "^10.0.1",
    "odiff-bin": "^4.0.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "playwright-core": "^1.55.1",
    "serve-handler": "^6.1.6"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.0.0",
    "@types/pixelmatch": "^5.2.4",
    "@types/pngjs": "^6.0.4",
    "@types/serve-handler": "^6.1.4",
    "@vividiff/eslint-config": "*",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "msw": "^2.6.6",
    "tsup": "^8.3.5",
    "typescript": "5.9.2",
    "vitest": "^2.1.8"
  },
  "exports": {
    ".": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "require": "./dist/core.cjs"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
