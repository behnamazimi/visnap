{
  "name": "visual-testing-tool",
  "version": "0.1.0",
  "description": "Visual Testing Tool - CLI and programmatic API for visual regression testing",
  "type": "module",
  "main": "./dist/core.cjs",
  "module": "./dist/core.js",
  "types": "./dist/core.d.ts",
  "bin": {
    "visual-testing-tool": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "ajv": "^8.17.1",
    "bundle-require": "^4.0.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.0",
    "inquirer": "^12.9.6",
    "minimatch": "^9.0.5",
    "odiff-bin": "^4.0.0",
    "playwright-core": "^1.55.1",
    "serve-handler": "^6.1.6"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/serve-handler": "^6.1.4",
    "@visual-testing-tool/eslint-config": "*",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "msw": "^2.6.6",
    "tsup": "^8.3.5",
    "typescript": "5.9.2",
    "vitest": "^2.1.8"
  },
  "exports": {
    ".": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "require": "./dist/core.cjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
