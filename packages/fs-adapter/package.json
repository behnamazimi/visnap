{
  "name": "@visnap/fs-adapter",
  "version": "0.4.2",
  "description": "Filesystem storage adapter for visnap visual testing",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit"
  },
  "keywords": [
    "visual-testing",
    "screenshot",
    "filesystem",
    "storage",
    "adapter"
  ],
  "author": "visnap",
  "license": "MIT",
  "dependencies": {
    "@visnap/protocol": "*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@visnap/eslint-config": "^0.4.1",
    "eslint": "^9.38.0",
    "tsup": "^8.0.0",
    "typescript": "5.9.3",
    "vitest": "^4.0.2"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
