{
  "name": "@visnap/root",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=!example-storybook-v8",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\" --ignore-path .prettierignore",
    "check-types": "turbo run check-types",
    "lint": "turbo run lint -- --fix",
    "lint:ci": "turbo run lint",
    "test": "turbo run test -- --run",
    "version": "changeset version",
    "release": "turbo run build --filter='@visnap/*' --filter='!@visnap/docs' && changeset publish --access public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
